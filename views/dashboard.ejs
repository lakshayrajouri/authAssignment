<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Employee Dashboard</title>
</head>
<body>
  <h1>Employee Dashboard</h1>
  
  <!-- Table for employee data -->
  <table border="1">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Email</th>
        <th>Designation</th>
        <th>Course</th>
        <th>Created Date</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% employees.forEach((employee) => { %> <!-- Loop through the employees array -->
        <tr>
          <td><%= employee.f_Id %></td>
          <td><%= employee.f_Name %></td>
          <td><%= employee.f_Email %></td>
          <td><%= employee.f_Designation %></td>
          <td><%= employee.f_Course %></td>
          <td><%= employee.f_Createdate.toLocaleDateString() %></td>
          <td>
            <a href="/employee/edit/<%= employee._id %>">Edit</a> | 
            <a href="/employee/delete/<%= employee._id %>">Delete</a>
          </td>
        </tr>
      <% }); %> <!-- End of loop -->
    </tbody>
  </table>

</body>
</html>
